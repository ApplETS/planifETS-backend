{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "@swc/jest"
    ]
  },
  "moduleNameMapper": {
    "^@/common/(.*)$": "<rootDir>/../src/common/$1",
    "^@/utils/(.*)$": "<rootDir>/../src/common/utils/$1"
  },
  "testEnvironment": "@quramy/jest-prisma-node/environment",
  "globalSetup": "<rootDir>/test-utils/jest-prisma/jest-global-setup.ts",
  "globalTeardown": "<rootDir>/test-utils/jest-prisma/jest-global-teardown.ts",
  "setupFilesAfterEnv": [
    "<rootDir>/test-utils/jest-prisma/mock-jest-prisma-setup.ts"
  ]
}
